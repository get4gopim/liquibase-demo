<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd ">


    <changeSet author="get4gopim" id="1.0.0-data-changeLog-01">
		<comment>
			JIRA-1290 Add an entry to Person table
		</comment>
		<insert tableName="person">
			<column name="id" valueNumeric="1" />
			<column name="name" value="Small" />
			<column name="address1" value="80/8, Adroit District S, Thalambur" />
			<column name="address2" value="Navalur" />
			<column name="city" value="Chennai" />
			<column name="country" value="IN" />
		</insert>
	</changeSet>
	
	<changeSet author="get4gopim" id="1.0.0-data-changeLog-02">
		<comment>
			JIRA-1291 Add an entry to Person table
		</comment>
		<insert tableName="person">
			<column name="id" valueNumeric="2" />
			<column name="name" value="John" />
			<column name="address1" value="Wall Street, London" />
			<column name="address2" value="Manchester" />
			<column name="city" value="London" />
			<column name="country" value="EU" />
		</insert>
	</changeSet>
	
	<changeSet author="get4gopim" id="1.0.0-data-changeLog-03">
		<preConditions onFail="HALT">
			<sqlCheck expectedResult="1">SELECT count(id)
    					FROM   person   					
    					WHERE  name = 'Small'</sqlCheck>
		</preConditions>
		<comment>
			JIRA-6466 update values from existing configurations
		</comment>
		<sql>
			<![CDATA[
				UPDATE person 
					SET country = 'US'
				WHERE id = 1
			]]>
		</sql>
	</changeSet>
	
	<changeSet author="get4gopim" id="1.0.0-data-changeLog-04">
		<insert tableName="person">
			<column name="id" valueNumeric="3" />
			<column name="name" value="Eric" />
			<column name="address1" value="Wall Street, 2nd Cross" />
			<column name="address2" value="Western Road" />
			<column name="city" value="Chennai" />
			<column name="country" value="IN" />
		</insert>
	</changeSet>
	
	<changeSet author="get4gopim" id="1.0.0-data-changeLog-05">
		<tagDatabase tag="version_1.3"/>
	</changeSet>
	
	<changeSet author="get4gopim" id="1.0.0-data-changeLog-06">
		<insert tableName="person">
			<column name="id" valueNumeric="4" />
			<column name="name" value="Eric" />
			<column name="address1" value="Wall Street, 2nd Cross" />
			<column name="address2" value="Western Road" />
			<column name="city" value="Chennai" />
			<column name="country" value="IN" />
		</insert>
		<rollback>
			delete from person where id = 4;
		</rollback>
	</changeSet>
	
	<changeSet author="tester" id="2">
		<createTable tableName="a_test1">
			<column name="id" type="int"/>
			<column name="name" type="varchar(50)"/>
			<column name="city" type="varchar(50)"/>
			<column name="last_name" type="varchar(50)"/>
		</createTable>
	</changeSet>
	
</databaseChangeLog>
